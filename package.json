{
  "name": "stock-manager",
  "version": "1.0.0",
  "description": "个人股票信息系统",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "build": "npm install",
    "deploy": "node scripts/deploy/deploy.js",
    "deploy:bat": "scripts/deploy/deploy.bat",
    "logs": "scripts/deploy/logs.bat",
    "status": "scripts/deploy/status.bat",
    "reset-password": "node scripts/tools/reset-admin-password.js",
    "list-users": "node scripts/tools/reset-admin-password.js list",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop stock-manager",
    "pm2:restart": "pm2 restart stock-manager",
    "pm2:reload": "pm2 reload ecosystem.config.js --update-env",
    "pm2:delete": "pm2 delete stock-manager",
    "pm2:logs": "pm2 logs stock-manager",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.4.1",
    "chart.js": "^4.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-fileupload": "^1.5.2",
    "iconv-lite": "^0.7.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^9.1.6",
    "node-cron": "^4.2.1",
    "node-gyp": "^11.4.2",
    "path": "^0.12.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "stock",
    "finance",
    "investment"
  ],
  "author": "Stock Manager Team",
  "license": "MIT"
}
